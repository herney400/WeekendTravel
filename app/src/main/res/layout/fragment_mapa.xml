<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragments.Mapa">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="477dp"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_above="@+id/footer">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText"
                    android:layout_weight="1"
                    android:text="Inicio" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText2"
                    android:layout_weight="1"
                    android:text="Fin" />

                <com.dd.CircularProgressButton
                    android:id="@+id/btnWithText"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/primaryColor"
                    android:textSize="18sp"
                    app:cpb_textComplete="@string/hostal"
                    app:cpb_textError="@string/hostal"
                    app:cpb_textIdle="@string/hostal" />

            </LinearLayout>

            <com.google.android.gms.maps.MapView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_gravity="right|bottom">




        <com.dd.CircularProgressButton
            android:id="@+id/geolocalizar"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            app:cpb_textComplete="@string/Generar"
            app:cpb_textIdle="@string/Generar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/marcar"
            android:padding="7dp"

            android:text="marcador"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Estoy aqui"
            android:id="@+id/btn_estoyaqui"
            android:padding="7dp"

            />



    </LinearLayout>


</FrameLayout>